<h1>Add blog here</h1>
<%= form_for :newPost, url:posts_path do |f| %>
    <% if @post.errors.full_messages.each do |msg| %>
        <div class="alert alert-danger"><%= msg %></div>
        <% end %>
    <% end %>
    <p>
        <%= f.label :title%>
        <%= f.text_field(:title, {:class => "form-control"}) %>
    </p>
    <p>
        <%= f.label :content%>
        <%= f.text_area(:content , {:class => "form-control"}) %>
    </p>
    <p>
        <%= f.submit(:class => "btn btn-success")%>
    </p>
<% end %>
<h1>All Posts</h1>
<%= @posts.each do |post| %>
    <div class="well">
        <h3> <%= post.title %> </h3>
        <p> <%= post.content %> </p>
        <%= link_to 'READ MORE', post_path(post), :class => "btn btn-primary" %>
        <hr>
    </div>
<% end %>